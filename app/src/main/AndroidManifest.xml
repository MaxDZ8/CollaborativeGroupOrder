    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <application
        android:name=".CrossActivityShare"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectFormingGroupActivity"
            android:label="@string/selectFormingGroupActivity_title"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>
        <activity
            android:name=".ExplicitConnectionActivity"
            android:label="@string/eca_title" />
        <activity
            android:name=".master.NewPartyDeviceSelectionActivity"
            android:label="@string/npdsa_title"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>
        <activity
            android:name=".NewCharactersApprovalActivity"
            android:label="@string/ncaa_title"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>
        <activity
            android:name=".NewCharactersProposalActivity"
            android:label="@string/ncpa_title"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>
        <activity
            android:name=".PartyPickActivity"
            android:label="@string/ppa_title"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>
        <activity
            android:name=".master.GatheringActivity"
            android:label="@string/ga_title"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>
        <activity
            android:name=".JoinSessionActivity"
            android:label="@string/jsa_title"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>
        <activity
            android:name=".client.CharSelectionActivity"
            android:label="@string/csa_title"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.massimodz8.collaborativegrouporder.MainMenuActivity" />
        </activity>

        <service
            android:name=".master.PartyJoinOrderService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".master.PartyCreationService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
