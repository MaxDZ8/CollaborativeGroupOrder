<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.massimodz8.collaborativegrouporder.NetworkListeningActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_getGroupNameDesc_text"
        android:id="@+id/txt_getGroupNameDesc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_partyName"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/txt_getGroupNameDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_startListening_text"
        android:id="@+id/btn_startListening"
        android:layout_below="@+id/in_partyName"
        android:layout_centerHorizontal="true"
        android:onClick="initiatePartyHandshake" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sameNetworkVisibilityInfo"
        android:id="@+id/textView2"
        android:layout_below="@+id/btn_startListening"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/networkScanning"
        android:id="@+id/txt_scanning"
        android:visibility="gone"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/renamedService_text"
        android:id="@+id/txt_renamedService"
        android:visibility="gone"
        android:layout_below="@+id/txt_scanning"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:visibility="invisible"
        android:layout_below="@+id/txt_renamedService"
        android:layout_alignRight="@+id/txt_scanning"
        android:layout_alignEnd="@+id/txt_scanning" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_characters"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_closeGroup"
        android:visibility="invisible"
        android:layout_below="@+id/progressBar" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_generateParty"
        android:id="@+id/btn_closeGroup"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
