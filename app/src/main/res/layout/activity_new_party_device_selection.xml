<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewPartyDeviceSelectionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/formingNewPartyActivity_goal"
        android:id="@+id/newPartyDeviceSelectionActivity_inputNameInstructions"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="visible" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newPartyDeviceSelectionActivity_groupName"
        android:layout_below="@+id/newPartyDeviceSelectionActivity_inputNameInstructions"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:hint="@string/formingNewPartyActivity_groupNameHint"
        android:selectAllOnFocus="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newPartyDeviceSelectionActivity_publish"
        android:id="@+id/newPartyDeviceSelectionActivity_activate"
        android:enabled="false"
        android:layout_below="@+id/newPartyDeviceSelectionActivity_groupName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignEnd="@+id/newPartyDeviceSelectionActivity_groupName"
        android:layout_alignParentEnd="false"
        android:onClick="action_callback" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPartyDeviceSelectionActivity_publishing"
        android:layout_below="@+id/newPartyDeviceSelectionActivity_activate"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:indeterminate="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/newPartyDeviceSelectionActivity_selectInstructions"
        android:id="@+id/newPartyDeviceSelectionActivity_publishFeedback"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newPartyDeviceSelectionActivity_activate"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/newPartyDeviceSelectionActivity_deviceList"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_below="@+id/newPartyDeviceSelectionActivity_publishFeedback"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/newPartyDeviceSelectionActivity_explicitConnectionInfos" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/newPartyDeviceSelectionActivity_explicitConnectionInfos"
        android:id="@+id/newPartyDeviceSelectionActivity_explicitConnectionInfos"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place holder for ads"
        android:id="@+id/textView3"
        android:editable="false"
        android:enabled="true"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#ff00ff"
        android:textStyle="bold|italic"
        android:background="#00ff00"
        android:textSize="32sp"
        android:paddingBottom="8sp"
        android:paddingTop="8sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

</RelativeLayout>
