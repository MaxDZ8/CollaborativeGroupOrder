<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.massimodz8.collaborativegrouporder.SelectFormingGroupActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/initializing"
        android:id="@+id/selectFormingGroupActivity_initializing"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/selectFormingGroupActivity_lookingForParties"
        android:id="@+id/selectFormingGroupActivity_lookingForGroups"
        android:visibility="gone"
        android:gravity="center_horizontal" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectFormingGroupActivity_progressBar"
        android:indeterminate="true"
        android:indeterminateOnly="false"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/selectFormingGroupActivity_groupList"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/selectFormingGroupActivity_confirmInstructions"
        android:id="@+id/selectFormingGroupActivity_confirmInstructions"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/selectFormingGroupActivity_explicitConnectionInstructions"
        android:id="@+id/selectFormingGroupActivity_explicitConnectionInstructions"
        android:visibility="gone"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectFormingGroupActivity_startExplicitConnection"
        android:id="@+id/selectFormingGroupActivity_startExplicitConnection"
        android:onClick="startExplicitConnectionActivity_callback"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place holder for ads"
        android:id="@+id/textView8"
        android:editable="false"
        android:enabled="true"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#ff00ff"
        android:textStyle="bold|italic"
        android:background="#00ff00"
        android:textSize="28sp" />

</LinearLayout>
