<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardTheme">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:rowCount="7" android:columnCount="4">

        <EditText
            android:id="@+id/card_joiningCharacter_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/card_character_nameHint"
            android:inputType="textCapWords|textPersonName|text"
            android:layout_row="0" android:layout_column="0" android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/card_joiningCharacter_level"
            android:layout_row="0"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/card_joining_character_client_input_level"
            android:layout_gravity="right"
            android:gravity="right"
            android:selectAllOnFocus="true" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/card_joiningCharacter_healthPoints"
            android:id="@+id/textView5"
            android:layout_row="1" android:layout_column="0" />

        <EditText
            android:inputType="number"
            android:id="@+id/card_joiningCharacter_hp"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_row="1" android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:selectAllOnFocus="true"
            android:layout_columnSpan="2" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/card_joiningCharacter_initBonus"
            android:id="@+id/textView6"
            android:layout_row="2" android:layout_column="0" />

        <EditText
            android:inputType="numberSigned"
            android:id="@+id/card_joiningCharacter_initBonus"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_row="2" android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:selectAllOnFocus="true"
            android:layout_columnSpan="2" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/card_joiningCharacter_experience"
            android:id="@+id/textView7"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="number"
            android:id="@+id/card_joiningCharacter_xp"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:selectAllOnFocus="true"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/card_joiningCharacter_sentFeedback"
            android:id="@+id/card_joiningCharacter_sentFeedback"
            android:layout_row="4"
            android:layout_column="0"
            android:visibility="visible"
            android:layout_gravity="right" />

        <Button
            android:text="@string/card_joiningCharacter_sendButton"
            android:id="@+id/card_joiningCharacter_sendButton"
            android:layout_row="4" android:layout_column="2"
            android:visibility="visible"
            android:layout_width="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_gravity="right" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_joiningCharacter_accepted"
            android:id="@+id/card_joiningCharacter_accepted"
            android:layout_row="5"
            android:layout_column="0"
            android:checked="true"
            android:enabled="false"
            android:textStyle="bold"
            android:visibility="visible" />

    </GridLayout>
</android.support.v7.widget.CardView>