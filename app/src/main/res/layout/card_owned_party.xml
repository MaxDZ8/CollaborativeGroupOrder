<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:paddingBottom="@dimen/packed_card_vertical_margin"
    android:paddingLeft="@dimen/packed_card_horizontal_margin"
    android:paddingRight="@dimen/packed_card_horizontal_margin"
    android:paddingTop="@dimen/packed_card_vertical_margin"
    android:layout_marginBottom="@dimen/packed_card_vertical_margin"
    android:layout_marginTop="@dimen/packed_card_vertical_margin"
    CardView:cardCornerRadius="0dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/generic_unreadable_at_start"
            android:id="@+id/cardOP_groupName"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_margin="8sp"
            android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/generic_unreadable_at_start"
            android:id="@+id/cardOP_pcList"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cardOP_createdLabel"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/generic_unreadable_at_start"
            android:id="@+id/cardOP_created"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cardOP_lastPlayLabel"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/generic_unreadable_at_start"
            android:id="@+id/cardOP_lastPlayed"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cardOP_currentStateLabel"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/generic_unreadable_at_start"
            android:id="@+id/cardOP_currentState"
            android:layout_row="4"
            android:layout_column="1" />
    </GridLayout>

</android.support.v7.widget.CardView>