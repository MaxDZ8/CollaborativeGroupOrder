<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vhAC_selected"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vhAC_avatar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/vhAC_selected"
        android:layout_toEndOf="@+id/vhAC_selected"
        android:src="@drawable/placeholder_todo"
        android:contentDescription="@string/vhAC_avatarDesc"
        android:layout_marginRight="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/vhAC_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/vhAC_avatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.massimodz8.collaborativegrouporder.HealthBar
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_toRightOf="@+id/vhAC_avatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/vhAC_name"
        android:id="@+id/vhAC_health" />

</RelativeLayout>