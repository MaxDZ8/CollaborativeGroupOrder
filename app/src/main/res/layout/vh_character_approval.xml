<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5" android:rowCount="8">

    <TextView
        android:id="@+id/vhCA_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/vhPCDI_nameHint"
        android:layout_row="0" android:layout_column="0" android:layout_columnSpan="3"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:textStyle="bold" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/card_joining_character_client_input_level"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/generic_unreadable_at_start"
        android:id="@+id/vhCA_level"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_columnSpan="2" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/card_joiningCharacter_healthPoints"
        android:layout_row="2" android:layout_column="0"
        android:visibility="visible" />

    <TextView
        android:id="@+id/vhCA_hp"
        android:singleLine="true"
        android:layout_row="2" android:layout_column="2"
        android:layout_width="wrap_content"
        android:selectAllOnFocus="true"
        android:visibility="visible"
        android:gravity="right"
        android:layout_gravity="right"
        android:text="@string/generic_unreadable_at_start"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/card_joiningCharacter_initBonus"
        android:layout_row="3" android:layout_column="0"
        android:visibility="visible" />

    <TextView
        android:id="@+id/vhCA_initBonus"
        android:singleLine="true"
        android:layout_row="3" android:layout_column="2"
        android:selectAllOnFocus="true"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:text="@string/generic_unreadable_at_start"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/card_joiningCharacter_experience"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <Space
        android:layout_width="12sp"
        android:layout_height="12sp"
        android:layout_row="4"
        android:layout_column="1" />

    <TextView
        android:id="@+id/vhCA_xp"
        android:singleLine="true"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:selectAllOnFocus="true"
        android:visibility="visible"
        android:layout_gravity="right"
        android:text="@string/generic_unreadable_at_start"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/vhCA_acceptedCharacter"
        android:id="@+id/vhCA_accepted"
        android:drawableLeft="@mipmap/ic_done_white_24dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />
</GridLayout>