<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vhPHC_image"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:src="@drawable/placeholder_todo"
        android:contentDescription="@string/vhCSPHC_imageDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/vhPHC_name"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/vhPHC_image"
        android:layout_toEndOf="@+id/vhPHC_image"
        android:layout_centerVertical="true" />
</RelativeLayout>