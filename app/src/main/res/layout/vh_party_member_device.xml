<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vhPMD_icon"
        android:src="@drawable/ic_smartphone_white_24dp"
        android:contentDescription="@string/vhPMD_iconDesc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/vhPMD_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/vhPMD_icon"
        android:layout_toEndOf="@+id/vhPMD_icon"
        android:layout_marginLeft="4sp" />
</RelativeLayout>